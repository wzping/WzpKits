<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="二维码相关"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/scan_default"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="扫描二维码/条码（使用库中默认布局）"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/scan_style"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="扫描二维码/条码（自定义布局）"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/generate_code"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="生成二维码图片"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/select_and_analys"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="选择图片并解析"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!--展示选择的图片的解析结果-->
        <TextView
            android:id="@+id/select_show_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="解析结果："
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!--展示选择的二维码图片-->
        <ImageView
            android:id="@+id/select_show_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_error1"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>
