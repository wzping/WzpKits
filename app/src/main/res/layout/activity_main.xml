<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="功能"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_widget_use"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="Widget库的使用"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_margin="10dp"/>


        <!--引导页-->

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/am_tv_guide1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="引导页1"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/am_tv_guide2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="引导页2"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>


        <!--加载Gif动态图-->

        <TextView
            android:id="@+id/loading_gif"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="加载Gif"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!--轮播图-->

        <TextView
            android:id="@+id/am_tv_cycle"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="轮播图"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <!--点击图片放大查看（手势）-->

        <TextView
            android:id="@+id/am_tv_look"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="点击图片放大查看(TODO)"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_margin="10dp"/>


        <!--扫码-->
        <TextView
            android:id="@+id/am_tv_scan"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="扫码"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <!--拍照从相片中选择-->
        <TextView
            android:id="@+id/am_tv_avatar"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="拍照从相片中选择"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/am_tv_pic_selector"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="PictureSelector"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/am_tv_picker"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="PickerView"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_margin="10dp"/>
    </LinearLayout>
</ScrollView>
