<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--自定义圆形图片控件-->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />  <!--边框宽度-->
        <attr name="border_color" format="color" />  <!--边框颜色-->
    </declare-styleable>


    <!--自定义扫码属性-->
    <declare-styleable name="ViewfinderView">
        <!--扫描框距离手机的上边距-->
        <attr name="inner_margintop" format="dimension" />
        <!--扫描框的宽度-->
        <attr name="inner_width" format="dimension"/>
        <!--扫描框的高度-->
        <attr name="inner_height" format="dimension"/>
        <!--扫描框边角颜色-->
        <attr name="inner_corner_color" format="color" />
        <!--扫描框边角长度-->
        <attr name="inner_corner_length" format="dimension" />
        <!--扫描框边角宽度-->
        <attr name="inner_corner_width" format="dimension" />
        <!--扫描线-->
        <attr name="inner_scan_bitmap" format="reference" /><!--reference:表示引用,参考某一资源id-->
        <!--扫描速度-->
        <attr name="inner_scan_speed" format="integer" /> <!--表示整型值-->
        <!--扫描过程中是否显示圆点-->
        <attr name="inner_scan_iscircle" format="boolean" />
        <!--扫描边框下面的提示文字-->
        <attr name="inner_scan_hint_text" format="string" /><!-- 表示字符串-->
        <!--扫描边框下面的提示文字颜色-->
        <attr name="inner_scan_hint_color" format="color" /><!--表示颜色值-->
        <!-- 扫描边框下面的提示文字大小-->
        <attr name="inner_scan_hint_size" format="dimension" /><!--表示尺寸值-->
        <!--扫描框下面的提示文字的边距（距离上面）-->
        <attr name="inner_scan_hint_margin_top" format="dimension" />
        <!--扫描边框下面的提示文字是否加粗-->
        <attr name="inner_scan_hint_bold" format="boolean" /><!--表示布尔值-->
    </declare-styleable>


    <!-- 自定义六边形图片控件 -->
    <declare-styleable name="HexagonView">
        <attr name="text" format="string" /> <!--文字-->
        <attr name="textSize" format="dimension" /> <!--字体大小-->
        <attr name="textColor" format="color" /><!--字体颜色-->
        <attr name="backColor" format="color" /><!--背景色-->
        <attr name="src" format="reference" /><!--图片-->
    </declare-styleable>


    <!--自定义圆环进度控件-->
    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color"/> <!--圆环默认显示颜色-->
        <attr name="roundProgressColor" format="color"/> <!--圆环进度条颜色-->
        <attr name="roundWidth" format="dimension"/><!--圆环默认宽度-->
        <attr name="roundProgressWidth" format="dimension"/> <!--圆环进度宽度-->
        <attr name="max" format="integer"/> <!--进度最大值-->
        <attr name="tvColor" format="color"/> <!--进度文字显示颜色-->
        <attr name="tvSize" format="dimension"/> <!--进度字体显示大小-->
        <attr name="textIsDisplayable" format="boolean"/> <!--进度文字是否显示-->
        <attr name="percentIsDisplayable" format="boolean"/><!-- %是否展示-->
        <attr name="style"><!-- 进度展示样式（圆环形还是饼状形）-->
            <enum name="STROKE" value="0"/>  <!--环形样式 默认-->
            <enum name="FILL" value="1"/> <!--饼状样式-->
        </attr>
    </declare-styleable>


    <!--自定义日历控件-->
    <declare-styleable name="CalendarView">
        <attr name="lineColor" format="color"/> <!-- 周上下两根线的颜色-->
        <attr name="otherDateColor" format="color"/> <!-- 不是当月日的文字颜色-->
        <attr name="validTextColor" format="color"/> <!-- 本月有效日的颜色-->
        <attr name="todayNumberColor" format="color"/> <!-- 今日的文字颜色-->
        <attr name="todayNumberCellColor" format="color"/> <!-- 今日的文字背景圈颜色-->
        <attr name="numberCellWidth" format="dimension"/> <!-- 所有显示的日期的背景圈宽度-->
        <attr name="cellDownColor" format="color"/> <!-- 点击选择日子时的背景颜色-->
        <attr name="weekTextSize" format="dimension"/> <!-- 周的文字大小-->
        <attr name="weekTextColor" format="color"/> <!-- 周的文字颜色-->
        <attr name="calendarTextSize" format="dimension"/> <!-- 整个日历日期的文字大小-->
        <attr name="showTodayNumber" format="boolean"/> <!-- 今日日期是直接展示日期还是展示"今天"-->
        <attr name="circleTextColor" format="color"/> <!-- 需要圈出的日期集合的文字颜色-->
        <attr name="circleCellColor" format="color"/> <!-- 需要圈出的日期集合的文字的背景圈颜色-->

    </declare-styleable>

</resources>